<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDDF77">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/botonMascotasPerdidas"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:backgroundTint="#FFA500"
        android:radius="0dp"
        android:shape="rectangle"
        android:text="Mascotas perdidas"
        android:textColor="@color/black"
        app:iconTint="#FFA500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318"
        app:rippleColor="#FF9800" />

    <Button
        android:id="@+id/botonServiciosMascotas"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:backgroundTint="#FFA500"
        android:text="Servicios mascota"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAdopcionDeMascotas"
        app:layout_constraintVertical_bias="0.494" />

    <Button
        android:id="@+id/botonAdopcionDeMascotas"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:backgroundTint="#FFA500"
        android:text="Adopción de mascotas "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonMascotasPerdidas"
        app:layout_constraintVertical_bias="0.233" />

    <ImageButton
        android:id="@+id/ibUsuario"

        android:layout_width="87dp"
        android:layout_height="83dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="irAPantallaUsuario"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <ImageView
        android:id="@+id/imagehouse"
        android:layout_width="80dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toTopOf="@+id/botonAdopcionDeMascotas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonMascotasPerdidas"
        app:layout_constraintVertical_bias="0.535"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imagecart"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAdopcionDeMascotas"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cart" />

    <ImageView
        android:id="@+id/imagepaw"
        android:layout_width="80dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toTopOf="@+id/botonMascotasPerdidas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901"
        app:srcCompat="@drawable/paw" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <Button
        android:id="@+id/btnCerrarSesión"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:backgroundTint="#FFA500"
        android:text="Cerrar sesión"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>